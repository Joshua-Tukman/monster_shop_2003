			<option value="WY">Wyoming</option>
      </select>
    </div>
    <div class="form-group col-md-2">
      <label for="inputZip">Zip</label>
      <input type="text" name="zip" class="form-control" id="inputZip" placeholder="Zip">
    </div>
    <div class="form-row">
    <div class="form-group col-md-4">
      <label for="username">Email</label>
      <input type="email" name="email" class="form-control" id="username" placeholder="Email" required name=un>
    </div>
    <div class="form-group col-md-4">
      <label for="password1">Password:</label>
      <input id="password1" type=password required name=password class="form-control" placeholder="Password">
    </div>
    <div class="form-group col-md-4">
      <label for="password2">Confirm password:</label>
      <input id="password2" type=password name=confirm_password class="form-control" placeholder="Confirm">
    </div>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type=submit value="Create Account">
  </div>
  </div>
</form>
